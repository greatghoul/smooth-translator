{
  "manifest_version": 3,
  "default_locale": "zh_CN",

  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.3",

  "icons": {
    "128": "images/icon-128.png"
  },

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "action": {
    "default_icon": "images/icon-128.png",
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup.html"
  },

  "options_page": "pages/options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/modules/text.js",
        "scripts/modules/translator-inspector.js"
      ],
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/libs/ractive.js",
        "scripts/components/Result.js",
        "scripts/components/ResultToast.js",
        "scripts/components/TranslatorHeadless.js",
        "scripts/modules/settings.js",
        "scripts/modules/translator-parser.js",
        "scripts/modules/translator-headless.js"
      ],
      "css": [
        "styles/modules/translator-headless.css"
      ]
    }
  ],

  "commands": {
    "toggle-link-inspect": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "打开/关闭链接划词模式"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://www.youdao.com/result*"
  ]
}
